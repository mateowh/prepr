<form class="body-form" action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <div class="form-group">
    <label for="post_title">Title</label>
    <input type="text" class="form-control" name="post_title" value="<%= @post.title %>" required maxlength="100">
  </div>

  <div class="form-group">
    <label for="post_body">Text</label>
    <input class="form-control" name="post_body" value="<%= @post.body %>" required maxlength="280"></input>
  </div>
  <input type="submit" class="btn btn-primary btn-sm" value="Submit">
</form>
