<form class="body-form" action="/posts/new" method="post">
  <div class="form-group">
    <label for="post_title">Title</label>
    <input type="text" class="form-control" name="post_title" placeholder="Enter title" required maxlength="100">
  </div>
  <div class="form-group">
    <label for="post_body">Text</label>
    <input type="text" class="form-control" name="post_body" placeholder="Enter text" required maxlength="280"></input>
  </div>
  <button type="submit" class="btn btn-primary btn-sm" name="submit">Submit</button>
</form>
