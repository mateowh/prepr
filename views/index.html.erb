<div class="container-fluid">
  <% @posts.each do |post| %>
    <div class="post card" id="post-<%= post.id %>">
      <div class="card-header"><strong><%= post.title %></strong></div>
      <div class="row">
        <div class="col col-md-9">
          <div class="card-body">
            <p><%= post.body %></p>
            <small class="posted-by-caption text-muted">Posted by <%= post.username %></small>
          </div>
        </div>

      <% if post.user_id == session[:user_id] %>
        <div class="col col-md-3">
          <div class="card-body">
            <form action="/posts/<%= post.id %>" method="post">
              <input type='hidden' name='_method' value='DELETE'/>
              <input type="submit" class="btn btn-danger btn-sm delete-recipe" name='Delete' value="Delete" onclick="return confirm('Are you sure you want to delete this?');"/>
            </form>

            <form action="/posts/<%= post.id %>/edit" method="get">
              <input type="submit" class="btn btn-info btn-sm edit-recipe" value='Edit'/>
            </form>
          </div>
        </div>
      <% end %>
      </div>

    </div>
  <% end %>
</div>
